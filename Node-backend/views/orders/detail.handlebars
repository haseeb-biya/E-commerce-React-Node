{{> _postLogin}}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                {{!-- <div class="callout callout-info">
                    <h5><i class="fas fa-info"></i> Note:</h5>
                    This page has been enhanced for printing. Click the print button at the bottom of the invoice to
                    test.
                </div> --}}


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> Ecommerce
                                <small class="float-right">Date: {{prettifyDate order.createdAt}}</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-6 invoice-col">
                            Shipping Address:
                            <address>
                                <strong>{{order.user.name}}</strong><br>
                                <strong>Address: </strong>{{order.shippingAddress.address}}<br>
                                <strong>City:</strong>{{order.shippingAddress.city}}<br>
                                <strong>Postal-Code:</strong>{{order.shippingAddress.postalCode}}<br>
                                <strong>Country:</strong>{{order.shippingAddress.country}}<br>
                                Phone: {{order.user.phone_no}}<br>
                                Email: {{order.user.email}}
                            </address>
                        </div>
                        <!-- /.col -->
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <b>Order Id: </b>#<h4>{{order._id}}</h4>
                            <b>Payment: </b>₹ {{order.totalPrice}}<br>
                            <b>Payment Method: </b>{{order.paymentMethod}}<br>
                            <b>Order Status: </b>{{order.orderStatus}}<br>
                            {{#if order.isPaid}}
                            <b>Is Paid: </b><span class="badge badge-success">Paid</span><br>
                            <b> Paid Date : </b><span class="badge badge-success">{{prettifyDate
                                order.paidAt}}</span><br>
                            {{else}}
                            <b>Is Paid: </b><span class="badge badge-danger">Not Paid</span><br>
                            {{/if}}
                            {{#if order.isDelivered}}
                            <b>Is Delivered: </b><span class="badge badge-success">Delivered</span><br>
                            <b> Delivery Date : </b><span class="badge badge-success">{{prettifyDate
                                order.deliveredAt}}</span><br>
                            {{else}}
                            <b>Is Delivered: </b><span class="badge badge-danger">Pending</span>
                            {{/if}}
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product Id</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Qty</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each order.orderItems}}

                                    <tr>
                                        <td>{{this.product}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.price}}</td>
                                        <td>{{this.qty}}</td>
                                        <td>₹ {{math this.price '*' this.qty}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-3">

                        </div>
                        <!-- /.col -->
                        <div class="col-6">

                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">Subtotal:</th>
                                        <td>₹ {{math order.totalPrice "-" order.shippingPrice}}</td>
                                    </tr>
                                    <tr>
                                        <th>Tax (9.3%)</th>
                                        <td>Still need to Discuss</td>
                                    </tr>
                                    <tr>
                                        <th>Shipping:</th>
                                        <td>₹ {{order.shippingPrice}}</td>
                                    </tr>
                                    <tr>
                                        <th>Total:</th>
                                        <td>₹ {{order.totalPrice}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <a href="#" rel="noopener" target="_blank" class="btn btn-default"><i
                                    class="fas fa-print"></i> Print</a>
                        </div>
                    </div>
                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>